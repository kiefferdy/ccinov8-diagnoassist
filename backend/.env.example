# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=DiagnoAssist
MONGODB_DATABASE=DiagnoAssist

# FHIR Server Configuration
FHIR_SERVER_URL=http://localhost:8080/fhir

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=DiagnoAssist Backend
